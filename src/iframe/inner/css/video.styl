.row.video {
	background: #000;
	
	.video-container {
		height: 0;
		margin: 0 auto;
		max-width: $module_max_width;
		overflow: hidden;
		padding-bottom: 56.25%;
		position: relative;
		
		iframe,object,embed {
			border: 0;
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
		}
	}
	
	.with_cube {
		.cube {
			float: right;
			margin-left: 20px;
		}
		
		@media (max-width: ($module_max_width-200)) {
			.cube {
				float: none;
				margin-left: 0;
				margin-bottom: 20px;
			}
		}
	}
}