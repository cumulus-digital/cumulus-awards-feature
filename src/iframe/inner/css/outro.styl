.row.outro {
	font-size: 1rem;
	padding: 3em;
	
	@media (max-width: ($module_max_width/1.25)) {
		font-size: 0.8rem;
	}
	@media (max-width: ($module_max_width/1.5)) {
		font-size: 0.7rem;
	}
	@media (max-width: ($module_max_width/1.75)) {
		font-size: 0.6rem;
	}

	
	a,/a& {
		color: inherit;
		text-decoration: none;
		
		&:hover {
			color: inherit;
			text-decoration: none;
			
			span {
				border-bottom: 1px solid #eee;
				border-bottom: 1px solid rgba(255,255,255,0.5);
			}
		}
	}
	
	h3,h4 {
		letter-spacing: 0.25em;
		line-height: 1;
		margin: 1.5em auto;
		max-width: $module_max_width;
		opacity: 1;
	}
	h3 {
		font-size: 1.2em;
		line-height: 1.25;
		margin-bottom: 10%;
	}
	h4 {
		font-size: 1em;
		line-height: 1.2;
		margin-bottom: 0.9em;
	}
	
	.logo,.tunein {
		max-width: 60%;
		
		@media (max-width: ($module_max_width/1.5)) {
			max-width: 90%;
		}
	}
	
}