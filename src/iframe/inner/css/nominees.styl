.nominees {

	font-size: 0.8rem;

	h2,h3,h4,h5,h6 {
		font-size: 1rem;
		line-height: 1;
		text-transform: uppercase;
	}

	ul {
		margin: 0 auto;
		max-width: $module_max_width
	}
	
	li:not(.cube) {
		display: inline-block;
		letter-spacing: 0.05em;
		margin: 0 7px 10px;
		text-transform: uppercase;
		vertical-align: top;
		width: 180px;
		
		&:first-child {
			margin-left: 0;
		}
		
		&:last-child {
			margin-right: 0;
		}
		
		img {
			display: block;
			margin: 0 auto .5rem;
			max-width: 100%;
		}
		
		small {
			font-size: 60%;
		}
		
		@media (max-width: ($module_max_width/2-10)) {
			max-width: 160px;
			margin: 0 5px 10px;
		}
		
	}
	
	.artist {
		letter-spacing: 0.1em;
		margin-top: 5px;
		
		em {
			font-size: 0.8em;
			font-style: normal;
		}
	}
	
	&.1column {
		font-size: 1.2rem;
		li:not(.cube-ad) {
			display: block;
			letter-spacing: .25em;
			margin: 0 auto 1.5em;
			max-width: 100%;
			width: auto;
		}
	}
	
	&.2column {
		font-size: 1.2rem;
		
		li:not(.cube-ad) {
			margin: 0 auto 1.5em;
			max-width: 50%;
			padding: 0 9px;
			
			@media (max-width: ($module_max_width/2+20)) {
				display: block;
				max-width: 100%;
			}
		}
	}
	
	&.3column {
		li:not(.cube-ad) {
			letter-spacing: 0.15em;
			margin: 0 auto .8em;
			max-width: 100%;
			padding: 0 9px;
			
			@media (max-width: ($module_max_width/2+20)) {
				display: block;
			}
		}
	}
	
	&.5column {
		li:not(.cube-ad) {
			margin: 0 auto .8em;
			max-width: 100%;
			padding: 0 5px;
			width: ($module_max_width/5);
			
			@media (max-width: ($module_max_width/2+20)) {
				display: block;
			}
		}
	}
	
	&.lowtier {
		
		h2 {
			margin-bottom: 0.8em;
			letter-spacing: 0.24em;
		}
		
		.column {
			display: inline-block;
			max-width: 50%;
			padding: 0 1em;
		}
		
		li {
			display: block;
			font-size: 1.2em;
			letter-spacing: 0.1em;
			line-height: 0.96;
			margin: 0;
			margin-bottom: 1em;
			text-align: center;
		}
	}
}