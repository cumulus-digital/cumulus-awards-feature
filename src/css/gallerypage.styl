html,body {
	background: none !important;
	margin: 0 !important;
	padding: 0 !important;
}

#wpadminbar,
.module-gallery { display: none !important; }

.whitewrap { float: none !important; }
.entry-content {
	margin: 0 !important;
	padding: 0 !important;
}

.cmls-gallery {
	background: transparent;
	position: relative;
	
	.cmls-gallery-item {
		opacity: 0.3;
		outline: 0 !important;
		padding: 0 5px;
		position: relative;
		transition: opacity 0.5s;
		
		& > img {
			height: 100%;
		}
	}
	
	.cmls-gallery-caption {
		background: #000;
		background: rgba(0,0,0,0.5);
		bottom: 0;
		color: #fff !important;
		font-family: sans-serif !important;
		font-size: 14px !important;
		left: 0;
		line-height: 1.24 !important;
		opacity: 0;
		padding: 8px 16px !important;
		position: absolute;
		text-shadow: 1px 1px 1px #000;
		transition: opacity 1s;
	}
	
	.slick-list, .slick-track { height: 100%; }
	.slick-center {
		opacity: 1;
		transition: opacity 0.5s;
		
		.cmls-gallery-caption { opacity: 1; }
	}
	
	.slick-prev, .slick-next {
		left: 10px;
		z-index: 9999;
	}
	.slick-next {
		left: auto;
		right: 10px;
	}
	
	.slick-slide { position: relative; }
}